@using MicroFeel.Abp.Theme.AdminLTE.Components.Toolbar.NotificationsBar
@model IEnumerable<Notification>
<li class="nav-item dropdown">
    <a class="nav-link" data-toggle="dropdown" href="#">
        <i class="far fa-bell"></i>
        <span class="badge badge-warning navbar-badge">@Model.Count()</span>
    </a>
    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
        @foreach (var item in Model)
        {
            <a href="#" class="dropdown-item">
                <i class="fas fa-envelope mr-2"></i> @item.Content
                <span class="float-right text-muted text-sm">@item.TimeStr</span>
            </a>
            <div class="dropdown-divider"></div>
        }
        <a href="#" class="dropdown-item dropdown-footer">See All Notifications</a>
    </div>
</li>
