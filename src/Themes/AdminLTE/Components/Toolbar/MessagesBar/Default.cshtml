@using MicroFeel.Abp.Theme.AdminLTE.Components.Toolbar.MessagesBar
@model IEnumerable<Message>
<li class="nav-item dropdown">
    <a class="nav-link" data-toggle="dropdown" href="#">
        <i class="far fa-comments"></i>
        <span class="badge badge-danger navbar-badge">@Model.Count()</span>
    </a>
    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
        @foreach (var item in Model)
        {
            <a href="@item.Url" class="dropdown-item">
                <!-- Message Start -->
                <div class="media">
                    @{var flag = item.HasRead ? "text-danger" : "text-muted"; }
                    <img src="@item.ImageUrl" alt="User Avatar" class="img-size-50 mr-3 img-circle">
                    <div class="media-body">
                        <h3 class="dropdown-item-title">
                            @item.Sender
                            <span class="float-right text-sm @flag"><i class="fas fa-star"></i></span>
                        </h3>
                        <p class="text-sm">@item.Content</p>
                        <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i> @item.TimeStr</p>
                    </div>
                </div>
                <!-- Message End -->
            </a>
            <div class="dropdown-divider"></div>
        }
        <a href="#" class="dropdown-item dropdown-footer">See All Messages</a>
    </div>
</li>