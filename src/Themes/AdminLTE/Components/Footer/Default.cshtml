<footer class="main-footer">
    @{
        var copyright = (string)ViewData["ApplicationCopyRight"] ?? "Your copyright info";
        var version = (string)ViewData["ApplicationVersion"] ?? "1.0";
        var content = "All rights reserved.";
        <strong>@Html.Raw(copyright)</strong> @content
        <div class="float-right d-none d-sm-inline-block">
            <b>Version:</b> @version
        </div>
    }
</footer>